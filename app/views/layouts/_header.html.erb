<div class="container">
  <header class="blog-header py-3">
          <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 text-center">
              <% if @current_user %>
                <span class="blog-header-logo text-dark">Welcome <%= @current_user.username %></span>
              <% end %>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
              <% if !@current_user %>
                <a class="p-2 text-dark" href="/sessions/new">Sign in</a>
              <% else %>
                <%= form_tag sessions_destroy_path, method: :delete do %>
                  <%= submit_tag "Sign Out", class: "btn btn-outline-primary" %>
                <% end %>
              <% end %>
            </div>
          </div>
  </header>
</div>