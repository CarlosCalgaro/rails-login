<%= form_tag '/create' do %>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            Username:
        </div>

        <div class="col-md-4">
            <%= text_field_tag :username %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            Password:
        </div>

        <div class="col-md-4">
            <%= password_field_tag :password %>
        </div>
    </div>
    <%= submit_tag "Sign In" %>
</div>
<% end %>